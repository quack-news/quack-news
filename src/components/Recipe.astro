---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  recipe: CollectionEntry<"receitas">;
}

const { recipe } = Astro.props;
const { image, title, description, pubDate, author, tags } = recipe.data;
---

<article class="recipe-item">
  <div class="recipe-image">
    <Image src={image.src} alt={image.alt} width={120} height={120} />
  </div>
  <div class="recipe-content">
    <h2>{title}</h2>
    <p class="recipe-meta">
      Por {author} â€” <time datetime={pubDate.toISOString()}>{pubDate.toLocaleDateString("pt-BR")}</time>
    </p>
    <p>{description}</p>
    <div class="recipe-tags">
      {tags.map(tag => <span class="tag">{tag}</span>)}
    </div>
  </div>
</article>

<style>
  .recipe-item {
    display: flex;
    border-bottom: 1px solid #eee;
    padding: 1em 0;
    gap: 1em;
  }
  .recipe-image img {
    border-radius: 8px;
    object-fit: cover;
  }
  .recipe-content h2 {
    margin: 0 0 0.2em 0;
    font-size: 1.2em;
  }
  .recipe-meta {
    font-size: 0.9em;
    color: #888;
    margin-bottom: 0.5em;
  }
  .recipe-tags {
    margin-top: 0.5em;
  }
  .tag {
    background: #f5ff9e;
    color: #333;
    padding: 0.2em 0.6em;
    border-radius: 4px;
    font-size: 0.85em;
    margin-right: 0.3em;
  }
</style>