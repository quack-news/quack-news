---
import Aside from "./Aside.astro";

export interface Previsao {
    nome: string;
    texto: string;
}

const {
    previsoes = [
        { nome: "Bernardo", texto: "Tudo de bom" },
        { nome: "Eloa", texto: "Tudo de bom" },
        { nome: "Fauzi", texto: "Tudo de bom" },
        {
            nome: "Gabe",
            texto: "Tudo de bom, tudo de bom, tudo de bom, tudo de bom, Tudo de bom, tudo de bom, tudo de bom, tudo de bom",
        },
        { nome: "Guilherme", texto: "lorem ipsum da silva junior" },
        { nome: "Laura", texto: "Tudo de bom" },
        { nome: "Yuka", texto: "Tudo de bom" },
    ],
}: { previsoes?: Previsao[] } = Astro.props;
---

<Aside direction="left">
    <header class="column-head">
        <span class="mystic-symbol">✦</span>
        <h2>Previsão Semanal da Yuka</h2>
        <span class="mystic-symbol">✦</span>
    </header>

    <figure class="quote-container">
        <blockquote>
            <p>
                <span class="sakura">❀</span>
                “Nossos patinhas, descubra nesse instante, sua sorte oculta”
                <span class="sakura">❀</span>
            </p>
        </blockquote>
        <figcaption>— Patinhas</figcaption>
    </figure>

    <article>
        <ul class="previsoes-lista">
            {
                previsoes.map(({ nome, texto }) => (
                    <li>
                        <h3>
                            <span class="mystic-symbol">☯</span>
                            {nome}
                            <span class="mystic-symbol">☯</span>
                        </h3>
                        <p>{texto}</p>
                    </li>
                ))
            }
        </ul>
    </article>
</Aside>

<style>
    .column-head {
        border-top: 2px solid #e0c68d;
        border-bottom: 2px solid #e0c68d;
        background: linear-gradient(90deg, #f9f6ef 0%, #f7e6c4 100%);
        color: #7c5c19;
        font-family: "Noto Serif JP", serif;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1em;
        letter-spacing: 0.05em;
        padding: 0.5em 0;
    }

    .mystic-symbol {
        font-size: 1.3em;
        color: #d4af37;
        filter: drop-shadow(0 0 2px #f7e6c4);
    }

    .quote-container {
        background: #fffbe9;
        border: 1.5px dashed #e0c68d;
        border-radius: 12px;
        margin: 1em 0 1em 0;
        padding: 0.6em 1em;
        box-shadow: 0 2px 8px #e0c68d33;
        font-family: "Noto Serif JP", serif;
        position: relative;
    }

    .quote-container blockquote {
        margin: 0;
        padding: 0;
    }

    .quote-container blockquote p {
        width: 100%;
        font-size: 1.08em;
        color: #7c5c19;
        font-style: italic;
        text-align: center;
        letter-spacing: 0.03em;
        line-height: 1.4;
    }

    .sakura {
        color: #e9b6d1;
        font-size: 1.2em;
        margin: 0 0.3em;
        vertical-align: middle;
        filter: drop-shadow(0 0 2px #fff0f6);
    }

    .quote-container figcaption {
        text-align: right;
        font-size: 0.98em;
        color: #bfa76a;
        margin-top: 0.3em;
        font-family: "Noto Serif JP", serif;
    }

    .previsoes-lista {
        list-style: none;
        padding: 0;
        margin: 0;
        font-family: "Noto Serif JP", serif;
    }

    .previsoes-lista li {
        margin-bottom: 1.2em;
        background: linear-gradient(90deg, #fffbe9 60%, #f7e6c4 100%);
        border-radius: 8px;
        padding: 0.7em 1em;
        box-shadow: 0 1px 4px #e0c68d22;
        transition: box-shadow 0.2s;
    }

    .previsoes-lista li:hover {
        box-shadow: 0 4px 16px #e0c68d44;
        background: linear-gradient(90deg, #f7e6c4 60%, #fffbe9 100%);
    }

    .previsoes-lista h3 {
        margin: 0 0 0.2em 0;
        color: #b97b5b;
        font-size: 1.1em;
        font-family: "Noto Serif JP", serif;
        letter-spacing: 0.04em;
        display: flex;
        align-items: center;
        gap: 0.5em;
    }

    .previsoes-lista p {
        margin: 0;
        color: #7c5c19;
        font-size: 1em;
        font-family: "Noto Serif JP", serif;
    }
</style>

<link
    href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;700&display=swap"
    rel="stylesheet"
/>
