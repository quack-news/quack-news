---
import { SITE_TITLE } from "../consts";

const today = new Date();
---

<footer class="main-footer">
    <div class="footer-container">
        <nav class="footer-nav">
            <h4>Navegação</h4>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/sobre">Sobre Nós</a></li>
                <li><a href="/contato">Contato</a></li>
                <li><a href="/politica-de-privacidade">Política de Privacidade</a></li>
            </ul>
        </nav>

        <div class="footer-social">
            <h4>Siga-nos</h4>
            <ul>
                <li><a href="#">Instagram</a></li>
                <li><a href="#">Twitter</a></li>
            </ul>
        </div>

        <div class="footer-contact">
            <h4>Contato</h4>
            <address>
                <p>Email: contato@{SITE_TITLE.toLowerCase().replace(" ", "")}.com</p>
            </address>
        </div>
    </div>
    
    <div class="footer-bottom">
        <p>&copy; {today.getFullYear()} {SITE_TITLE}. Todos os direitos reservados.</p>
    </div>
</footer>

<style>
    .main-footer {
        background-color: #333;
        color: #fff;
        padding: 2rem 0;
        font-family: sans-serif;
    }

    .footer-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap; /* Garante que os itens quebrem a linha em telas menores */
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 2rem;
        border-bottom: 1px solid #444;
    }

    .footer-nav, .footer-social, .footer-contact {
        display: flex;
        flex-direction: column;
        min-width: 150px;
    }
    
    .footer-nav h4, .footer-social h4, .footer-contact h4 {
        margin-top: 0;
        color: #fff;
    }

    .footer-container ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-container a {
        text-decoration: none;
        color: #fff;
        opacity: 0.7;
        transition: opacity 0.2s ease-in-out;
        line-height: 1.8;
    }

    .footer-container a:hover {
        opacity: 1;
    }

    .footer-bottom {
        text-align: center;
        margin-top: 2rem;
        font-size: 0.9rem;
        color: #fff;
    }
</style>