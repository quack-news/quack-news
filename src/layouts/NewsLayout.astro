---
import type { CollectionEntry } from "astro:content";

import SampleLayout from "./SampleLayout.astro";
import ContentMetatada from "../components/ContentMetatada.astro";

import { Image } from "astro:assets";
import Content from "../components/Content.astro";

type News = CollectionEntry<"noticias">;
type Frontmatter = News["data"];

interface Props {
    frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;
const { title, image } = frontmatter;
---

<SampleLayout>
    <div class="content-header">
        <h1 class="news-title">{title}</h1>
        <Image src={image.src} alt={image.alt} class="featured-image" />
    </div>

    <ContentMetatada type="noticias" {frontmatter} />
    <!-- <Content /> -->

    <article class="news-article">
        <slot />
    </article>
</SampleLayout>

<style>
    .news-article {
        text-align: justify;
        line-height: 1.6;
        font-size: 1.1em;
        max-width: 75ch;
        margin: 0 auto;
    }

    .content-header {
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .news-title {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .featured-image {
        width: 100%;
        max-height: 150px;
        object-fit: cover;
        border-radius: 8px;
    }
</style>
